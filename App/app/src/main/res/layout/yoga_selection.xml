<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_pink"
    tools:context=".ExerciseSelection"
    tools:ignore="MissingClass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/big_padding">

            <Button
                android:text="yoga select"
                style="@style/selection_title" />

            <ImageButton
                android:id="@+id/plank"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/plank" />

            <ImageButton
                android:id="@+id/cat_cow"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/cat_cow" />

            <ImageButton
                android:id="@+id/down_dog"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/downward_facing_dog" />

            <ImageButton
                android:id="@+id/cresent_lunge"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/cresent_lunge" />

            <ImageButton
                android:id="@+id/childs"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/childs" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>