<resources>

    <style name="exercise_result">
        <item name="android:layout_marginBottom">8dp</item>
<!--        <item name="android:background">@android:color/holo_orange_light</item>-->
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="exercise_date">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="exercise_achievement">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="selection_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:backgroundTint">@color/button_light_purple</item>
    </style>

    <style name="normal_button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/button</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>